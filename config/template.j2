/**
 * @file
 * Defines default strategy parameter values for the given timeframe.
 */

// Defines indicator's parameter values for the given pair symbol and timeframe.
struct Indi_Chaikin_Params_{{ Timeframe }} : ChaikinIndiParams {
  Indi_Chaikin_Params_{{ Timeframe }}() : ChaikinIndiParams(indi_cho_defaults, PERIOD_{{ Timeframe }}) {
    shift = {{ Chaikin_Indi_Chaikin_Shift | default(0) }};
  }
} indi_cho_{{ Timeframe | lower }};

// Defines strategy's parameter values for the given pair symbol and timeframe.
struct Stg_Chaikin_Params_{{ Timeframe }} : StgParams {
  // Struct constructor.
  Stg_Chaikin_Params_{{ Timeframe }}() : StgParams(stg_cho_defaults) {
    lot_size = {{ Chaikin_LotSize | default(0) }};
    signal_open_method = {{ Chaikin_SignalOpenMethod | default(0) }};
    signal_open_filter_method = {{ Chaikin_SignalOpenFilterMethod | default(1) }};
    signal_open_level = (float){{ Chaikin_SignalOpenLevel | default(0) }};
    signal_open_boost = {{ Chaikin_SignalOpenBoostMethod | default(0) }};
    signal_close_method = {{ Chaikin_SignalCloseMethod | default(0) }};
    signal_close_level = (float){{ Chaikin_SignalCloseLevel | default(0) }};
    price_stop_method = {{ Chaikin_PriceStopMethod | default(0) }};
    price_stop_level = (float){{ Chaikin_SignalCloseLevel | default(1) }};
    tick_filter_method = {{ Chaikin_TickFilterMethod  | default(1) }};
    max_spread = {{ Chaikin_MaxSpread | default(0) }};
  }
} stg_cho_{{ Timeframe | lower }};
